{
  "expo": {
    "name": "Xpenzie - The Expense Tracker",
    "shortName": "Xpenzie",
    "slug": "xpenzie-expense-tracker",
    "scheme": "xpenzie-expense-tracker",
    "description": "Easily track daily expenses in multiple languages and currencies.",
    "version": "0.8.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "icon": "./assets/icon.png",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.maxxdevs.xpenzie",
      "image": "./assets/splash.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.maxxdevs.xpenzie"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "5e45f82b-8f82-4b9b-b729-30a4492b8688"
      }
    }
  }
}
